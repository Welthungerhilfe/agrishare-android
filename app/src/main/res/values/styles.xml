<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="loader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16dp</item>
        <item name="fontPath">@string/default_font_bold</item>
    </style>

    <style name="pink_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/pink_border</item>
        <item name="android:paddingLeft">24sp</item>
        <item name="android:paddingRight">24sp</item>
        <item name="android:textColor">@color/pink</item>
        <item name="android:textSize">14dp</item>
        <item name="fontPath">@string/default_font_bold</item>
    </style>

    <style name="feedback_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16dp</item>
        <item name="fontPath">@string/default_font_bold</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
        <!-- Remove shadow below action bar Android < 5.0 -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tab_background</item>
        <!--  <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>     -->
    </style>

    <style name="MyCustomTabLayoutForDashboard" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tab_background_for_dashboard</item>
        <item name="fontPath">@string/default_font_bold</item>
        <item name="android:fontFamily">@font/sourcesansprobold</item>
        <!--  <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>     -->
    </style>

    <style name="splash_white_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="fontPath">@string/default_font</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="scrollview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="scrollview_linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="imageview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="right_arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">16sp</item>
        <item name="android:src">@drawable/arrow</item>
    </style>

    <style name="reg_section_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontPath">@string/default_font</item>
        <item name="android:textSize">26dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_below">@+id/icon</item>
    </style>

    <style name="intro_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_grey</item>
        <item name="fontPath">@string/default_font</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="green_intro_textview" parent="intro_textview">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="left_margin_green_intro_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontPath">@string/default_font</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/almost_black</item>
        <item name="fontPath">@string/default_font</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="profile_row_text" parent="textview">
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="small_header_text">
        <item name="android:textColor">@color/mid_grey</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="reg_section_description_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_for_text</item>
        <item name="fontPath">@string/default_font</item>
        <item name="android:textSize">14dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_below">@+id/name</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/round_corner_white_bg</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/grey_for_text</item>
        <item name="android:textSize">16dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>2
        <item name="fontPath">@string/default_font</item>
    </style>

    <style name="space_for_icon_edittext" parent="edittext">
        <item name="android:paddingLeft">32dp</item>
    </style>

    <style name="space_for_icon_edittext_with_right_padding" parent="space_for_icon_edittext">
        <item name="android:paddingRight">32dp</item>
    </style>


    <style name="multi_line_edittext" parent="edittext">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:lines">8</item>
        <item name="android:minLines">6</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
        <item name="android:gravity">top|left</item>
        <item name="android:maxLines">10</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="fake_edittext_row_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12sp</item>
        <item name="android:background">@drawable/round_corner_white_bg</item>
        <item name="android:paddingTop">11sp</item>
        <item name="android:paddingBottom">11sp</item>
    </style>

    <style name="form_value_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_for_text</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="fontPath">@string/default_font</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="webview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:alwaysDrawnWithCache">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="profile_row_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">16sp</item>
        <item name="android:paddingTop">16sp</item>
        <item name="android:paddingRight">16sp</item>
    </style>

    <style name="profile_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/light_grey</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/light_grey</item>
    </style>

    <style name="notifications_prefs_switch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">16sp</item>
    </style>

    <style name="refresh_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="mini_tab_header_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontPath">@string/default_font</item>
        <item name="android:textSize">20dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="tutorial_tab_intro_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16sp</item>
        <item name="android:textColor">@color/grey_for_text</item>
        <item name="fontPath">@string/default_font</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="tutorial_row_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">16sp</item>
        <item name="android:paddingTop">16sp</item>
        <item name="android:paddingRight">16sp</item>
    </style>

    <style name="tutorial_row_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="tutorial_row_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">16sp</item>
        <item name="android:textColor">@color/almost_black</item>
        <item name="fontPath">@string/default_font</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="listing_photo_imageview" parent="imageview">
        <item name="android:layout_width">80sp</item>
        <item name="android:layout_height">80sp</item>
        <item name="android:src">@drawable/default_image</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="pink_border_button">
        <item name="android:layout_width">80sp</item>
        <item name="android:layout_height">25sp</item>
        <item name="android:background">@drawable/pink_border</item>
        <item name="android:textColor">@color/pink</item>
        <item name="android:textSize">10dp</item>
        <item name="fontPath">@string/default_font_bold</item>
    </style>

    <style name="service_cell_container">
        <item name="android:layout_width">0sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">16sp</item>
        <item name="android:background">@color/page_bg_grey</item>
    </style>

    <style name="service_cell_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="service_cell_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">8sp</item>
        <item name="android:textColor">@color/grey_for_text</item>
        <item name="fontPath">@string/default_font</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="edittext_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12sp</item>
    </style>

    <style name="field_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">8sp</item>
    </style>

    <style name="pink_arrow_field_icon" parent="field_icon">
        <item name="android:layout_marginLeft">12sp</item>
        <item name="android:layout_marginRight">16sp</item>
    </style>

    <style name="upload_photo_imageview" parent="imageview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/default_image</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="upload_photo_cell_container">
        <item name="android:layout_width">0sp</item>
        <item name="android:layout_height">100sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="upload_photo_cancel_imageview">
        <item name="android:layout_width">20sp</item>
        <item name="android:layout_height">20sp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:padding">4sp</item>
        <item name="android:src">@drawable/arrow</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="field_unit_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">8sp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/grey_for_text</item>
        <item name="fontPath">@string/default_font_bold</item>
    </style>

    <style name="material_spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/round_corner_white_bg</item>
    </style>
</resources>
