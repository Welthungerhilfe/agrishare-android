<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16sp"
    android:paddingTop="16sp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16sp"
        android:orientation="vertical">

        <app.fonts.SourceSansProSemiBoldTextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            style="@style/semibold_textview"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/rating_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ratings_five_30"/>

            <app.fonts.SourceSansProRegularTextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8sp"
                android:text="0 Jan 2018"
                android:textSize="14sp"
                android:textColor="@color/grey_for_text"
                style="@style/textview"/>

        </LinearLayout>

        <app.fonts.SourceSansProRegularTextView
            android:id="@+id/comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comments"
            style="@style/textview"/>

    </LinearLayout>

    <View
        android:layout_below="@+id/details_container"
        android:layout_toRightOf="@+id/photo"
        android:layout_marginTop="16sp"
        style="@style/divider" />

</LinearLayout>
