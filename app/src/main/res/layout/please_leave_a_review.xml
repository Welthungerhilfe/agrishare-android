<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/page_bg_grey"
    android:paddingLeft="16sp"
    android:paddingRight="16sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <app.fonts.SourceSansProRegularTextView
            android:text="@string/please_leave_a_review"
            style="@style/intro_textview" />

        <app.fonts.SourceSansProRegularTextView
            android:text="@string/your_rating_and_review_will_help"
            style="@style/caption_textview" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16sp">

            <RelativeLayout
                android:id="@+id/star_container1"
                android:layout_marginLeft="0sp"
                style="@style/star_container">

                <ImageView
                    android:id="@+id/star1"
                    android:src="@drawable/green_star_60"
                    style="@style/star_imageview" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/star_container2"
                style="@style/star_container">

                <ImageView
                    android:id="@+id/star2"
                    style="@style/star_imageview" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/star_container3"
                style="@style/star_container">

                <ImageView
                    android:id="@+id/star3"
                    style="@style/star_imageview" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/star_container4"
                style="@style/star_container">

                <ImageView
                    android:id="@+id/star4"
                    style="@style/star_imageview" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/star_container5"
                style="@style/star_container">

                <ImageView
                    android:id="@+id/star5"
                    style="@style/star_imageview" />

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp">

            <EditText
                android:id="@+id/rating_message"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:hint="@string/your_message"
                style="@style/space_for_icon_edittext" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8sp"
                android:src="@drawable/phone_60" />

        </RelativeLayout>

        <Button
            android:id="@+id/rating_submit"
            android:text="@string/done"
            android:layout_marginTop="32sp"
            android:layout_marginBottom="16sp"
            style="@style/button" />

    </LinearLayout>



</RelativeLayout>
