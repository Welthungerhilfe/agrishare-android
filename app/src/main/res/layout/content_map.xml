<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="app.map.MapActivity"
    tools:showIn="@layout/activity_map">

    <RelativeLayout
        android:id="@+id/intro_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_green">

        <app.fonts.SourceSansProRegularTextView
            android:id="@+id/intro"
            android:text="@string/find_your_location_and_tap_on_it"
            android:layout_centerInParent="true"
            android:layout_margin="16sp"
            android:textSize="14dp"
            android:textColor="@color/colorPrimary"
            style="@style/intro_textview" />


    </RelativeLayout>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/detail_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/intro_container"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        />

    <include
        android:id="@+id/feedback"
        layout="@layout/common_feedback"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
