<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg_grey">


    <ScrollView
        android:layout_below="@+id/close_icon"
        android:layout_marginTop="32sp"
        style="@style/scrollview">

        <LinearLayout
            android:paddingLeft="16sp"
            android:paddingRight="16sp"
            android:paddingBottom="80sp"
            android:paddingTop="16sp"
            style="@style/scrollview_linear_layout">

            <app.fonts.SourceSansProRegularTextView
                android:id="@+id/description"
                android:text="@string/when_do_you_require_the_service_to_be_performed"
                style="@style/search_form_description_textview" />

            <RelativeLayout
                android:id="@+id/start_date_container"
                style="@style/fake_edittext_row_container">

                <ImageView
                    android:id="@+id/date_icon"
                    android:src="@drawable/form_calendar2_60"
                    style="@style/field_icon"  />

                <app.fonts.SourceSansProRegularTextView
                    android:id="@+id/start_date"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/date_icon"
                    android:text="@string/start_date"
                    style="@style/form_value_textview" />

            </RelativeLayout>


        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/submit"
        android:layout_alignParentBottom="true"
        android:text="@string/next"
        style="@style/button" />

    <include
        android:id="@+id/feedback"
        layout="@layout/common_feedback_grey_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
