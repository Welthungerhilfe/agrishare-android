<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg_grey">


    <ScrollView
        android:layout_below="@+id/close_icon"
        android:layout_marginTop="32sp"
        style="@style/scrollview">

        <LinearLayout
            android:paddingLeft="16sp"
            android:paddingRight="16sp"
            android:paddingBottom="80sp"
            android:paddingTop="16sp"
            style="@style/scrollview_linear_layout">

            <app.fonts.SourceSansProRegularTextView
                android:id="@+id/description"
                android:text="@string/who_are_you_making_this_booking_for"
                style="@style/search_form_description_textview" />

            <RelativeLayout
                android:id="@+id/me_container"
                style="@style/fake_edittext_row_container">

                <ImageView
                    android:id="@+id/rent_icon"
                    android:src="@drawable/form_user_60"
                    style="@style/field_icon"  />

                <app.fonts.SourceSansProRegularTextView
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/rent_icon"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:text="@string/me"
                    style="@style/form_value_textview" />

                <ImageView
                    android:id="@+id/arrow_down"
                    android:src="@drawable/arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8sp"
                    style="@style/icon" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/friend_container"
                style="@style/fake_edittext_row_container">

                <ImageView
                    android:id="@+id/friend_icon"
                    android:src="@drawable/friend_60"
                    style="@style/field_icon"  />

                <app.fonts.SourceSansProRegularTextView
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/friend_icon"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:text="@string/a_friend"
                    style="@style/form_value_textview" />

                <ImageView
                    android:src="@drawable/arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8sp"
                    style="@style/icon" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/group_container"
                style="@style/fake_edittext_row_container">

                <ImageView
                    android:id="@+id/group_icon"
                    android:src="@drawable/group_60"
                    style="@style/field_icon"  />

                <app.fonts.SourceSansProRegularTextView
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/group_icon"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:text="@string/a_group"
                    style="@style/form_value_textview" />

                <ImageView
                    android:id="@+id/arrow"
                    android:src="@drawable/arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8sp"
                    style="@style/icon" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

 <!--   <Button
        android:id="@+id/submit"
        android:layout_alignParentBottom="true"
        android:text="@string/next"
        style="@style/button" />-->

    <include
        android:id="@+id/feedback"
        layout="@layout/common_feedback_grey_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
