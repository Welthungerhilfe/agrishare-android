            <app.fonts.SourceSansProRegularTextView
                android:text="@string/upload_one_or_more_photos"
                style="@style/intro_textview" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16sp">

                <RelativeLayout
                    style="@style/upload_photo_cell_container">

                    <com.github.siyamed.shapeimageview.RoundedImageView
                        android:id="@+id/photo1"
                        app:siRadius="2sp"
                        app:siBorderWidth="0dp"
                        app:siBorderColor="@color/page_bg_grey"
                        app:siSquare="false"
                        android:background="@android:color/transparent"
                        style="@style/upload_photo_imageview"/>

                    <ImageView
                        android:id="@+id/cancel1"
                        style="@style/upload_photo_cancel_imageview"/>

                </RelativeLayout>

                <RelativeLayout
                    style="@style/upload_photo_cell_container">

                    <com.github.siyamed.shapeimageview.RoundedImageView
                        android:id="@+id/photo2"
                        android:layout_marginLeft="12sp"
                        app:siRadius="2sp"
                        app:siBorderWidth="0dp"
                        app:siBorderColor="@color/page_bg_grey"
                        app:siSquare="false"
                        android:background="@android:color/transparent"
                        style="@style/upload_photo_imageview"/>

                    <ImageView
                        android:id="@+id/cancel2"
                        style="@style/upload_photo_cancel_imageview"/>

                </RelativeLayout>

                <RelativeLayout
                    style="@style/upload_photo_cell_container">

                    <com.github.siyamed.shapeimageview.RoundedImageView
