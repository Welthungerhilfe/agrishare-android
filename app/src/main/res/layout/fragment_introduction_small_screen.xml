<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/footer_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/language_container"
            android:layout_above="@+id/register"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:layout_marginTop="8sp"
            android:layout_marginBottom="16sp"
            style="@style/fake_edittext_row_container">

            <ImageView
                android:id="@+id/language_icon"
                android:src="@drawable/language_60"
                style="@style/field_icon"  />

            <app.fonts.SourceSansProRegularTextView
                android:id="@+id/language"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/language_icon"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:text="@string/choose_language"
                style="@style/form_value_textview" />

            <ImageView
                android:id="@+id/language_arrow"
                android:src="@drawable/arrow_down"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8sp"
                style="@style/icon" />

        </RelativeLayout>

        <Button
            android:id="@+id/register"
            android:text="@string/register"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:background="@android:color/black"
            style="@style/button" />

        <app.fonts.SourceSansProSemiBoldTextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="24sp"
            android:paddingBottom="12sp"
            android:paddingRight="24sp"
            android:paddingLeft="24sp"
            android:text="@string/registered_users_login_here"
            style="@style/splash_white_textview"/>

        <app.fonts.SourceSansProRegularTextView
            android:id="@+id/terms"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="12sp"
            android:paddingBottom="24sp"
            android:paddingRight="24sp"
            android:paddingLeft="24sp"
            android:text="@string/terms_of_use_privacy_policy"
            android:textSize="14dp"
            style="@style/splash_white_textview"/>


    </LinearLayout>

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:padding="16dp"
        android:src="@drawable/pink_arrow"/>



</RelativeLayout>
