<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="32sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16sp">

        <app.fonts.SourceSansProRegularTextView
            android:id="@+id/recent_notifications"
            android:text="@string/recent_notifications"
            android:textSize="20dp"
            style="@style/textview" />

        <app.fonts.SourceSansProRegularTextView
            android:id="@+id/notification_count"
            android:layout_width="18sp"
            android:layout_height="18sp"
            android:layout_toRightOf="@+id/recent_notifications"
            android:layout_marginLeft="8sp"
            android:text="0"
            android:textSize="12dp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:background="@drawable/round_green_bg"
            style="@style/textview" />

        <RelativeLayout
            android:id="@+id/view_all_notifications_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <app.fonts.SourceSansProRegularTextView
                android:id="@+id/view_all"
                android:text="@string/view_all"
                android:textSize="12dp"
                android:textColor="@color/grey_for_text"
                android:layout_centerVertical="true"
                style="@style/textview" />

            <ImageView
                android:layout_width="10sp"
                android:layout_height="10sp"
                android:layout_toRightOf="@+id/view_all"
                android:layout_marginLeft="8sp"
                android:layout_marginRight="16sp"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow"/>



        </RelativeLayout>



    </RelativeLayout>

</LinearLayout>
