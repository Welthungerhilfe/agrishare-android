<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    
    <ImageView
        android:id="@+id/close_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="4dp"
        android:layout_marginTop="1dp"
        android:src="@drawable/button_back"/>


    <ScrollView
        android:layout_below="@+id/close_icon"
        android:layout_marginTop="8sp"
        style="@style/scrollview">

        <LinearLayout
            android:paddingLeft="16sp"
            android:paddingRight="16sp"
            android:paddingBottom="80sp"
            android:paddingTop="16sp"
            style="@style/scrollview_linear_layout">

            <app.fonts.SourceSansProRegularTextView
                android:id="@+id/name"
                android:text="@string/welcome"
                android:layout_marginTop="8sp"
                android:layout_marginLeft="16sp"
                android:layout_marginRight="16sp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                style="@style/reg_section_textview" />

            <app.fonts.SourceSansProRegularTextView
                android:id="@+id/description"
                android:layout_marginLeft="40sp"
                android:layout_marginRight="40sp"
                android:text="@string/please_complete_the_rest"
                android:layout_gravity="center_horizontal"
                style="@style/reg_section_description_textview" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <EditText
                    android:id="@+id/phone"
                    android:inputType="phone"
                    android:imeOptions="actionNext"
                    android:hint="@string/phone_number"
                    style="@style/space_for_icon_edittext" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8sp"
                    android:src="@drawable/phone_60" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:id="@+id/name_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/fname"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:inputType="textCapSentences"
                        android:imeOptions="actionNext"
                        android:hint="@string/first_name"
                        style="@style/space_for_icon_edittext" />

                    <EditText
                        android:id="@+id/lname"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:inputType="textCapSentences"
                        android:imeOptions="actionNext"
                        android:hint="@string/last_name"
                        android:layout_marginLeft="4dp"
                        style="@style/edittext" />

                </LinearLayout>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8sp"
                    android:src="@drawable/form_name_60" />

            </RelativeLayout>

           <!-- <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <EditText
                    android:id="@+id/email"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionNext"
                    android:hint="@string/email_address"
                    style="@style/space_for_icon_edittext" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8sp"
                    android:src="@drawable/form_email_60" />

            </RelativeLayout>-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <EditText
                    android:id="@+id/pin"
                    android:inputType="numberPassword"
                    android:imeOptions="actionNext"
                    android:hint="@string/pin"
                    style="@style/space_for_icon_edittext" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8sp"
                    android:src="@drawable/form_pin_60" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/dob_container"
                style="@style/fake_edittext_row_container">

                <ImageView
                    android:id="@+id/dob_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8sp"
                    android:src="@drawable/form_calendar_60" />

                <app.fonts.SourceSansProRegularTextView
                    android:id="@+id/dob"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/dob_icon"
                    android:text="@string/dob"
                    style="@style/form_value_textview" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/gender_container"
                style="@style/fake_edittext_row_container">

                <ImageView
                    android:id="@+id/gender_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8sp"
                    android:src="@drawable/form_gender_60" />

                <app.fonts.SourceSansProRegularTextView
                    android:id="@+id/gender"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/gender_icon"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:text="@string/gender"
                    style="@style/form_value_textview" />

            </RelativeLayout>


        <!--    <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16sp">

                <CheckBox
                    android:id="@+id/terms_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <app.fonts.SourceSansProRegularTextView
                    android:id="@+id/i_have_read_and_agreed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/i_have_read_and_agreed"
                    android:layout_toRightOf="@+id/terms_checkbox"/>

            </RelativeLayout>-->

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/submit"
        android:layout_alignParentBottom="true"
        android:text="@string/next"
        style="@style/button" />

    <include
        android:id="@+id/agree_terms"
        layout="@layout/agree_terms"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include
        android:id="@+id/feedback"
        layout="@layout/common_feedback_grey_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
