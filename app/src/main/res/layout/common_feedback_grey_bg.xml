<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingPrefix"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/page_bg_grey"
    android:visibility="gone"
    android:clickable="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="48sp"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/feedback_activity"
            style="@style/loader"
            android:layout_gravity="center" />

        <com.github.lzyzsd.circleprogress.DonutProgress
            android:id="@+id/feedback_progress"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            custom:donut_text_size="0dp"
            custom:donut_progress="0"
            android:max="100"
            android:progress="0"
            custom:donut_background_color="@android:color/white"
            custom:donut_unfinished_stroke_width="4dp"
            custom:donut_finished_stroke_width="4dp"
            custom:donut_finished_color="@color/colorAccent"
            />

        <ImageView
            android:id="@+id/feedback_icon"
            android:contentDescription="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="center" />

        <app.fonts.SourceSansProRegularTextView
            android:id="@+id/feedback_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="16sp"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="24dp"
            android:text="@string/app_name" />

        <app.fonts.SourceSansProRegularTextView
            android:id="@+id/feedback_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:textColor="@color/dark_grey_for_text"
            android:textSize="16dp"
            android:text="@string/app_name" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/feedback_form_field_container"
        android:layout_above="@+id/feedback_retry"
        android:layout_marginLeft="16sp"
        android:layout_marginRight="16sp"
        android:layout_marginTop="8sp"
        android:visibility="gone"
        style="@style/fake_edittext_row_container">

        <ImageView
            android:id="@+id/feedback_form_icon"
            android:src="@drawable/circles_60"
            style="@style/field_icon"  />

        <app.fonts.SourceSansProRegularTextView
            android:id="@+id/feedback_form_text"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/feedback_form_icon"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:text="Title"
            style="@style/form_value_textview" />

        <ImageView
            android:id="@+id/feedback_form_arrow"
            android:src="@drawable/arrow_down"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8sp"
            style="@style/icon" />

    </RelativeLayout>

    <Button
        android:id="@+id/feedback_retry"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_margin="16sp"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="64dp"
        android:paddingRight="64dp"
        android:layout_marginTop="32dp"
        android:text="@string/retry"
        style="@style/feedback_button" />

</RelativeLayout>