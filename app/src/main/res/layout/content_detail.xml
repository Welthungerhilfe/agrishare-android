<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="app.search.DetailActivity"
    tools:showIn="@layout/activity_detail"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <android.support.v4.view.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentTop="true"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:transitionName="profile"
                    android:src="@drawable/default_image" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:src="@drawable/vignette"/>

                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_alignParentBottom="true"
                    app:ci_drawable="@drawable/rounded_corner_green_bg"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16sp">

                <app.fonts.SourceSansProBoldTextView
                    android:id="@+id/title"
                    android:text="Title"
                    android:textColor="@color/colorPrimary"
                    android:textSize="22dp"
                    style="@style/textview" />

                <app.fonts.SourceSansProRegularTextView
                    android:id="@+id/read_reviews"
                    android:layout_gravity="center_vertical"
                    android:text="@string/read_reviews"
                    android:textColor="@color/mid_grey"
                    android:textSize="14sp"
                    android:drawableRight="@drawable/arrow"
                    android:drawablePadding="4sp"
                    style="@style/textview" />

                <app.fonts.SourceSansProRegularTextView
                    android:id="@+id/description"
                    android:layout_marginTop="8sp"
                    android:text="Description"
                    android:textColor="@color/row_title_grey"
                    android:textSize="16sp"
                    style="@style/textview" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/specs_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16sp">




            </LinearLayout>

            <include
                android:id="@+id/tasks_container"
                layout="@layout/tasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16sp"/>

        </LinearLayout>

    </ScrollView>

    <include
        android:id="@+id/feedback"
        layout="@layout/common_feedback"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
